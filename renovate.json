{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "ignoreTests": true,
  "rangeStrategy": "bump",
  "schedule": [
    "every 1 hour after 00:00 and before 23:59"
  ],
  "automergeSchedule": [
    "after 10pm and before 5am every weekday",
    "every weekend"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "Next.js",
      "automerge": true,
      "matchPackageNames": [
        "/^react/",
        "/^next/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "Chakra UI",
      "automerge": true,
      "matchPackageNames": [
        "/^chakra/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "eslint",
      "automerge": true,
      "matchPackageNames": [
        "/^eslint/"
      ]
    }
  ]
}
